{% extends "layouts/base.njk" %}
{% block content %}
  <div class="grid">
  {% for testimonial in testimonials.items %}
    <article
      id="{{ testimonial.authorSlug }}"
      aria-labelledby="{{ testimonial.authorSlug }}"
      class="testimonial"
      data-layout="{{ testimonial.authorSlug }}"
    >
      <div class="testimonial__header">
      <img alt="" src="images/{{ testimonial.authorSlug }}.jpg" width="50px" height="50px"/>
      <hqgroup>
        <h2>{{ testimonial.author }}</h2>
        <p class="testimonial__status">{{ testimonial.status }}</p>
      </hqgroup>
      </div>
      <p class="testimonial__summary">{{ testimonial.summary }}</p>
      <p class="testimonial__quote"><q>{{ testimonial.quote }}</q></p>
    </article>
  {% endfor %}
  </div>
{% endblock %}
